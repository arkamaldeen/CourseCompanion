# CourseCompanion Environment Variables
# Copy this file to .env and fill in your values:
# cp env.example .env

# ==================== Application ====================
APP_NAME=CourseCompanion
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ==================== MongoDB ====================
# For local development:
MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=coursecompanion

# ==================== OpenAI ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Model settings
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==================== Vector Search ====================
VECTOR_INDEX_NAME=course_content_index
EMBEDDING_DIMENSIONS=1536

# ==================== RAG Settings ====================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# ==================== Agent Settings ====================
MAX_DISCOVERY_TURNS=5

# ==================== Frontend ====================
API_BASE_URL=http://localhost:8000

# ==================== CORS (comma-separated) ====================
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501,http://localhost:3000

